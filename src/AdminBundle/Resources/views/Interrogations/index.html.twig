{% extends "AdminBundle::base.html.twig" %}

{% block title %}FAQ{% endblock %}

{% block breadcrumb %}
    <li>
        <a href="{{ path('admin_faq_index') }}">FAQ</a>
    </li>
    <li class="active">
        <a href="{{ path('admin_faq_index') }}"><strong>Index</strong></a>
    </li>
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Questions</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Position</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for item in interrogations %}
                        <tr>
                            <td class="col-md-1">{{  item.id }}</td>
                            <td>{{ item.titre }}</td>
                            <td>{{ item.contenu }}</td>
                            <td class="col-md-1">{{ item.position }}</td>
                            <td class="col-md-1 text-center"><i class="fa fa-pencil"></i> | <i class="fa fa-trash"></i> </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="#" class="btn btn-primary">Ajouter une question</a>
            </div>
        </div>
    </div>
{% endblock %}
