{% extends "AdminBundle::base.html.twig" %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block breadcrumb %}
<li>
    <a href="{{ path('admin_user_index') }}">User</a>
</li>
<li class="active">
    <a href="{{ path('admin_user_index') }}"><strong>Index</strong></a>
</li>
{% endblock %}

{% block body %}
<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Liste des utilisateurs</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>email</th>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {%  for user in users %}
                <tr>
                    <td class="col-md-1">{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td class="col-md-1">{{ user.role.name }}</td>
                    <td class="col-md-1 text-center"><i class="fa fa-pencil"></i> | <i class="fa fa-trash"></i> </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('admin_user_add') }}" class="btn btn-primary">Ajouter un utilisateur</a>
        </div>
    </div>

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Liste des rôles</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {%  for role in roles %}
                    <tr>
                        <td class="col-md-1">{{  role.id }}</td>
                        <td>{{  role.name }}</td>
                        <td class="col-md-1">{{ role.role }}</td>
                        <td class="col-md-1 text-center"><i class="fa fa-pencil"></i> | <i class="fa fa-trash"></i> </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="#" class="btn btn-primary">Ajouter un rôle</a>
        </div>
    </div>
</div>
{% endblock %}
