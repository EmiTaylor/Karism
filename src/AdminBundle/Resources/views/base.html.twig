<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Karism {% block title %}{% endblock %}</title>

    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/font-awesome.min.css') }}" rel="stylesheet">

    <link href="{{ asset('css/animate.css') }}" rel="stylesheet">
    <link href="{{ asset('css/inspinia.css') }}" rel="stylesheet">

    {% block stylesheets %} {% endblock %}
</head>

<body>
<div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        <!--<span><img alt="image" class="img-circle" src="img/profile_small.jpg"></span>-->
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="clear"> <span class="block m-t-xs">
                                    <strong class="font-bold">{{ app.session.get('user_name') }}</strong>
                                </span>
                            </span>
                        </a>
                    </div>
                </li>
                <li>
                    <a href="{{ path('admin_index') }}"><i class="fa fa-th-large"></i> <span class="nav-label">Dashboard</span></a>
                </li>
                <li>
                    <a href="{{ path('admin_user_index') }}"><i class="fa fa-users"></i> <span class="nav-label">Utilisateurs</span></a>
                </li>
                <li>
                    <a href="{{ path('admin_landing_index') }}"><i class="fa fa-star"></i> <span class="nav-label">Landing Page</span></a>
                </li>
                <li>
                    <a href="{{ path('admin_charte_index') }}"><i class="fa fa-file"></i> <span class="nav-label">Charte</span></a>
                </li>
                <li>
                    <a href="{{ path('admin_faq_index') }}"><i class="fa fa-question-circle"></i> <span class="nav-label">FAQ</span></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-comments"></i> <span class="nav-label">Chat</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="row border-bottom">
            <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li>
                        <a href="{{ path('index') }}">
                            Accueil du site
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('user_logout') }}">
                            <i class="fa fa-sign-out"></i> Log out
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="wrapper wrapper-content">
                <div class="ibox float-e-margins">
                    <div class="ibox-content p-md">
                    <h2>{{ block('title') }}</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path('admin_index') }}">Home</a>
                        </li>
                        {% block breadcrumb %}{% endblock %}
                    </ol>
                    </div>
                </div>
            </div>

            {% block body %}
            {% endblock %}

            <div class="footer">
                <div>
                    <strong>Copyright</strong> Karism &copy; 2017
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="{{ asset('js/vendor/jquery.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/vendor/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>
<script src="{{ asset('js/plugins/slimscroll/jquery.slimscroll.min.js') }}"></script>
<script type="text/javascript" src="{{asset("js/vendor/inspinia.js")}}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>